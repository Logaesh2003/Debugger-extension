{
    "name": "debugger-extension",
    "displayName": "Debugger Extension",
    "description": "Auto-fix code errors using a backend service",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.fixError"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.fixError",
                "title": "Fix Error"
            },
            {
                "command": "extension.acceptFix",
                "title": "Accept Fix",
                "icon": "$(check)"
            },
            {
                "command": "extension.discardFix",
                "title": "Discard",
                "icon": "$(close)"
            }
        ],
        "menus": {
            "comments/comment/title": [
                {
                    "command": "extension.acceptFix",
                    "group": "navigation",
                    "when": "comment == suggestedFix"
                },
                {
                    "command": "extension.discardFix",
                    "group": "navigation",
                    "when": "comment == suggestedFix"
                }
            ],
            "comments/comment/context": [
                {
                    "command": "extension.acceptFix",
                    "group": "inline",
                    "when": "comment == suggestedFix"
                },
                {
                    "command": "extension.discardFix",
                    "group": "inline",
                    "when": "comment == suggestedFix"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.fixError",
                "key": "ctrl+shift+k",
                "mac": "cmd+shift+k",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }
}